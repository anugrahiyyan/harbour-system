# Server
NODE_ENV=production
PORT=3000

# Manager authentication
MANAGER_PASSWORD=Slebewwww123  # Change this to a strong password!

# Session configuration
SESSION_SECRET=UltraSecureRandomSessionKey_GenerateNewOne!

# Access code lifetime (in seconds)
CODE_TTL_SECONDS=86400  # 1 day

# Optional logging mode (debug or info)
LOG_LEVEL=info

# Path configuration
DATA_DIR=./data
SHIPS_FILE=ships.json
CODES_FILE=codes.json
SESSIONS_FILE=sessions.json

# Optional CORS whitelist (comma separated)
CORS_WHITELIST=http://localhost:3000

# ===============================
# ‚öôÔ∏è ADVANCED OPTIONS (optional)
# ===============================

# Force HTTPS cookie in production
COOKIE_SECURE=true
COOKIE_SAMESITE=strict

# Nginx reverse proxy trust (true if using Cloudflare or reverse proxy)
TRUST_PROXY=true

# Timezone override (optional)
TZ=Asia/Makassar  # WITA timezone
